@model AgenciaViagemDC.Models.Destino

@{
    ViewData["Title"] = "Alterar";
}

<h1 class=padding-texto centraliza-texto>Alterar Destino</h1>

<div class="centraliza-form">
    
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UF" class="control-label"></label>
                <input asp-for="UF" maxlength="2" class="form-control" placeholder="RJ"/>
                <span asp-validation-for="UF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade"maxlength="50" class="form-control" placeholder="São Paulo" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" placeholder="259" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <br />
            <div class="centro-btn form-group">
                <input type="submit" value="Salvar Alterações" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <button class="btn btn-primary hover-diferente"><a class="cor-da-ancora" asp-action="Index">Voltar para a lista</a></button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
